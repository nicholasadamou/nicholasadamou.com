{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build:cache-images": "node scripts/build-cache-images-fallback.js",
    "build": "next build",
    "generate:rss": "node scripts/generate-rss.mjs",
    "generate:sitemap": "node scripts/generate-sitemap.mjs",
    "postbuild": "npm-run-all --parallel generate:rss generate:sitemap",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:unsplash": "vitest run src/__tests__/*unsplash*.test.ts src/__tests__/image-fallback.test.ts",
    "test:unsplash:watch": "vitest src/__tests__/*unsplash*.test.ts src/__tests__/image-fallback.test.ts",
    "test:unsplash:coverage": "vitest run --coverage src/__tests__/*unsplash*.test.ts src/__tests__/image-fallback.test.ts",
    "act:list": "act --list",
    "act:ci": "act -W .github/workflows/ci.yml",
    "act:test": "act -W .github/workflows/test.yml",
    "act:coverage": "act -W .github/workflows/coverage.yml",
    "act:shellcheck": "act -W .github/workflows/shellcheck.yml",
    "act:dryrun": "act --dryrun",
    "download:images": "node tools/unsplash-node-utilities/src/cli/download.js",
    "clean:images": "node tools/unsplash-node-utilities/src/cli/clean.js",
    "cache:images": "node tools/unsplash-node-utilities/src/cli/cache.js",
    "test:fallback": "node tools/unsplash-node-utilities/src/tests/fallback.test.js",
    "test:integration": "node tools/unsplash-node-utilities/src/tests/integration.test.js",
    "verify:unsplash": "node tools/unsplash-node-utilities/src/cli/verify.js",
    "url-to-download": "node tools/unsplash-node-utilities/src/cli/url-to-download.js",
    "download:images:unsplash": "node scripts/download-images-unsplash-fallback.js",
    "download:images:vsco": "node scripts/download-images-vsco-fallback.js",
    "cache:stats": "curl http://localhost:3000/api/cache?action=stats | jq .",
    "cache:clear": "curl http://localhost:3000/api/cache?action=clear",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@calcom/embed-react": "^1.5.3",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@mapbox/rehype-prism": "^0.9.0",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.2",
    "@octokit/rest": "^22.0.0",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@vercel/analytics": "^1.5.0",
    "@vercel/postgres": "^0.9.0",
    "@vercel/speed-insights": "^1.2.0",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.12",
    "geist": "^1.4.2",
    "gray-matter": "^4.0.3",
    "ioredis": "^5.7.0",
    "katex": "^0.16.22",
    "linkify-it": "^5.0.0",
    "lucide-react": "^0.456.0",
    "next": "^15.5.2",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.2.1",
    "react": "^19.1.1",
    "react-confetti": "^6.4.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-katex": "^3.1.0",
    "simple-icons": "^15.13.0",
    "tlds": "^1.260.0",
    "uuid": "^11.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@akebifiky/remark-simple-plantuml": "^1.0.2",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/linkify-it": "^3.0.5",
    "@types/mapbox__rehype-prism": "^0.8.3",
    "@types/node": "^20.19.11",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/react-katex": "^3.0.4",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "msw": "^2.11.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-math": "^6.0.0",
    "rss": "^1.2.2",
    "sharp": "^0.33.5",
    "sitemap": "^8.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "estree-util-value-to-estree@<3.3.3": ">=3.3.3"
    }
  }
}
